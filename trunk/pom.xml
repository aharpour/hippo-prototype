<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<name>Hippo prototype</name>
	<description>Hippo prototype</description>
	<groupId>com.tdclighthouse.hippo</groupId>
	<artifactId>hippo-prototype</artifactId>
	<version>0.0.23-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<developers>
		<developer>
			<name>Ebrahim Aharpour</name>
			<email>ebrahim.aharpour@gmail.com</email>
		</developer>
	</developers>

	<inceptionYear>2012</inceptionYear>

	<scm>
		<connection>scm:svn:https://svn.code.sf.net/p/hippoprototype/code/trunk/</connection>
		<developerConnection>scm:svn:https://svn.code.sf.net/p/hippoprototype/code/trunk/</developerConnection>
		<url>https://svn.code.sf.net/p/hippoprototype/code/trunk/</url>
	</scm>
	<ciManagement />

	<distributionManagement>
		<repository>
			<id>sf-hippo-prototype-repo</id>
			<url>svn:https://svn.code.sf.net/p/hippoprototype/code/maven2/</url>
		</repository>
	</distributionManagement>

	<properties>
		<junit.version>4.10</junit.version>
	</properties>

	<repositories>
		<repository>
			<id>hippo</id>
			<name>Hippo maven 2 repository.</name>
			<url>http://maven.onehippo.com/maven2/</url>
		</repository>
		<repository>
			<id>hippo-forge-beanmapper</id>
			<name>Bean mapper</name>
			<url>https://forge.onehippo.org/svn/beanmapper/maven2/</url>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>		
		</repository>
		<repository>
			<id>hippo-forge</id>
			<name>Hippo Forge</name>
			<url>http://maven.onehippo.com/maven2-forge/</url>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>		
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>
			<!-- Latex dependency -->
			<dependency>
				<groupId>org.scilab.forge</groupId>
				<artifactId>jlatexmath</artifactId>
				<version>0.9.6</version>
			</dependency>
			<!-- /Latex dependency -->

			<dependency>
				<groupId>org.onehippo.forge</groupId>
				<artifactId>content-blocks</artifactId>
				<version>1.08.02</version>
			</dependency>

			<dependency>
				<groupId>org.onehippo.forge.selectionplugins</groupId>
				<artifactId>selectionplugins-addon-repository</artifactId>
				<version>2.05.06</version>
			</dependency>

			<dependency>
				<groupId>org.onehippo.forge.selectionplugins</groupId>
				<artifactId>selectionplugins-addon-cms</artifactId>
				<version>2.05.06</version>
			</dependency>

			<dependency>
				<groupId>com.tdclighthouse.hippo</groupId>
				<artifactId>bean-mapper</artifactId>
				<version>1.3</version>
			</dependency>

			<dependency>
				<groupId>com.tdclighthouse</groupId>
				<artifactId>commons-tools</artifactId>
				<version>0.4.19-SNAPSHOT</version>
			</dependency>
			<!-- Apache libs -->
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-lang3</artifactId>
				<version>3.1</version>
			</dependency>

			<dependency>
				<groupId>commons-pool</groupId>
				<artifactId>commons-pool</artifactId>
				<version>1.6</version>
			</dependency>

			<dependency>
				<groupId>commons-beanutils</groupId>
				<artifactId>commons-beanutils</artifactId>
				<version>1.8.3</version>
			</dependency>
			<!-- /Apache libs -->

			<dependency>
				<groupId>joda-time</groupId>
				<artifactId>joda-time</artifactId>
				<version>2.0</version>
			</dependency>

			<dependency>
				<groupId>org.onehippo.cms7.hst.dependencies</groupId>
				<artifactId>hst-client-dependencies</artifactId>
				<version>2.24.05</version>
				<scope>provided</scope>
				<type>pom</type>
			</dependency>

			<dependency>
				<groupId>org.onehippo.cms7.hst.dependencies</groupId>
				<artifactId>hst-shared-dependencies</artifactId>
				<version>2.24.05</version>
				<type>pom</type>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.onehippo.cms7</groupId>
				<artifactId>hippo-repository-api</artifactId>
				<version>2.22.05</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.onehippo.cms7</groupId>
				<artifactId>hippo-addon-publication-workflow-repository</artifactId>
				<version>2.22.02</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.onehippo.cms7</groupId>
				<artifactId>hippo-cms-gallery-common</artifactId>
				<version>2.22.05</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.onehippo.cms7</groupId>
				<artifactId>hippo-repository-builtin</artifactId>
				<version>2.22.05</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>javax.jcr</groupId>
				<artifactId>jcr</artifactId>
				<version>2.0</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.onehippo.cms7</groupId>
				<artifactId>hippo-repository-connector</artifactId>
				<version>2.22.05</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>javax.servlet</groupId>
				<artifactId>servlet-api</artifactId>
				<version>2.5</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-simple</artifactId>
				<version>1.5.8</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-log4j12</artifactId>
				<version>1.6.4</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>taglibs</groupId>
				<artifactId>standard</artifactId>
				<version>1.1.2</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>javaee</groupId>
				<artifactId>javaee-api</artifactId>
